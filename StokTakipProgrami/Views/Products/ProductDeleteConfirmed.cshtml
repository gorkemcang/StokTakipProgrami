@model StokTakipProgrami.Entity.Product

@{
    ViewData["Title"] = "ProductDeleteConfirmed";
    Layout = "AdminLayout";
}
<h2>Are you sure you want to delete this product?</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryId
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10">
            @Model.StockQuantity
        </dd>
    </dl>

    <form asp-action="ProductDeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.CategoryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ProductList" class="btn btn-secondary">Cancel</a>
    </form>
</div>
