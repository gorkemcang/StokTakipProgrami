@model StokTakipProgrami.Entity.Product
@{
    ViewData["Title"] = "ProductEdit";
    Layout = "AdminLayout";
}
<form asp-action="ProductEdit" method="post">
    <input type="hidden" name="ProductId" value="@Model.Id" />
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select class="form-control" id="CategoryId" name="CategoryId">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId" >@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" />
    </div>
    <div class="form-group">
        <label for="Stock">Stock</label>
        <input type="number" class="form-control" id="Stock" name="Stock" value="@Model.StockQuantity" />
    </div>
    <button type="submit" class="btn btn-primary">Update Product</button>
</form>
